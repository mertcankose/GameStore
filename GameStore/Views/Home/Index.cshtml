<!DOCTYPE html>
<html>
<head>
    <title>Game Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <style>
        /* Custom styles for Game Store */
        body {
            font-family: 'Poppins', sans-serif;
            background: #121212;
            color: #FFFFFF;
        }

        .navbar {
            background-color: #121212;
        }

        .navbar-brand {
            font-size: 2em;
            color: #FCC10D;
        }

        .game-store-title {
            font-size: 3em;
            font-weight: 700;
            color: #FCC10D;
            padding-top: 5%;
            text-align: center;
        }

        .container {
            padding: 50px;
            color: #E0E0E0;
        }

        .game-store-product-card {
            background: #1F1F1F;
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease;
            margin-bottom: 50px;
        }

            .game-store-product-card:hover {
                transform: scale(1.03);
                box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            }

            .game-store-product-card img {
                object-fit: cover;
                height: 400px;
                width: 100%;
            }

            .game-store-product-card .card-body {
                padding: 20px;
            }

            .game-store-product-card h5.card-title {
                font-size: 1.5em;
                margin-bottom: 15px;
                color: #FCC10D;
            }

            .game-store-product-card p.card-text {
                font-size: 1.2em;
                color: #BFBFBF;
            }

        .footer {
            background: #121212;
            color: #FFFFFF;
            padding: 20px 0;
        }

            .footer p {
                font-size: 14px;
                color: #BFBFBF;
                text-align: center;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Game Store</a>
        </div>
    </nav>
    <h1 class="game-store-title">Explore Our Collection</h1>
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card game-store-product-card">
                        <img class="card-img-top" src="@product.Image" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <footer class="footer">
        <p>©Game Store 2023</p>
    </footer>
</body>
</html>
