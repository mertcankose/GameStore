<!DOCTYPE html>
<html>
<head>
    <title>Game Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/styles.css">
    <style>
        /* Custom styles for Game Store */
        body {
            font-family: 'Poppins', sans-serif;
            background: #222222;
            color: #FFFFFF;
        }

        .navbar {
            background-color: #222222;
            border-bottom: 3px solid #FCC10D;
        }

        .navbar-brand {
            font-size: 2em;
            color: #FCC10D;
        }

        .navbar .form-inline {
            flex-grow: 1;
        }

        /* Updated search bar styles */
        .search-box {
            position: relative;
            margin-left: 1rem;
            width: 70%;
        }

            .search-box input {
                width: 100%;
                padding: 12px 24px;
                border: none;
                border-radius: 25px;
                background: #333333;
                color: #FFFFFF;
                transition: 0.3s;
            }

                .search-box input::placeholder {
                    color: #BFBFBF;
                }

                .search-box input:focus {
                    background: #444444;
                    box-shadow: 0 0 10px 0 rgba(252, 193, 13, 0.25);
                }

            .search-box .search-btn {
                position: absolute;
                right: 0;
                top: 0;
                bottom: 0;
                width: 50px;
                background: #FCC10D;
                color: #222222;
                border-radius: 25px;
                border: none;
                display: flex;
                justify-content: center;
                align-items: center;
            }

                .search-box .search-btn:hover {
                    background: #e8b306;
                }

                .search-box .search-btn i {
                    transition: 0.3s;
                }

                .search-box .search-btn:hover i {
                    transform: rotate(360deg);
                }

        /* Continue with your previous styles... */
        .game-store-title {
            font-size: 3em;
            font-weight: 700;
            color: #FCC10D;
            padding: 5% 0;
            text-align: center;
        }

        .container {
            padding: 50px;
            color: #E0E0E0;
        }

        .game-store-product-card {
            background: #2C2C2C;
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 50px;
        }

            .game-store-product-card:hover {
                transform: scale(1.03);
                box-shadow: 0px 4px 20px rgba(252, 193, 13, 0.4);
            }

            .game-store-product-card img {
                object-fit: cover;
                height: 400px;
                width: 100%;
                border-bottom: 3px solid #FCC10D;
            }

            .game-store-product-card .card-body {
                padding: 20px;
            }

            .game-store-product-card h5.card-title {
                font-size: 1.5em;
                margin-bottom: 15px;
                color: #FCC10D;
            }

            .game-store-product-card p.card-text {
                font-size: 1.2em;
                color: #BFBFBF;
            }

        .footer {
            background: #222222;
            color: #FFFFFF;
            padding: 20px 0;
            border-top: 3px solid #FCC10D;
        }

            .footer p {
                font-size: 14px;
                color: #BFBFBF;
                text-align: center;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><i class="fas fa-gamepad"></i> Game Store</a>
            <!-- Updated search bar form -->
            <form class="form-inline my-2 my-lg-0 search-box" method="get" asp-controller="Home" asp-action="Index">
                <input class="form-control" type="search" name="searchString" placeholder="Search games" aria-label="Search">
                <button class="btn search-btn" type="submit"><i class="fas fa-search"></i></button>
            </form>

        </div>
    </nav>
    <h1 class="game-store-title">Explore Our Collection</h1>
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card game-store-product-card">
                        <img class="card-img-top" src="@product.Image" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <footer class="footer">
        <p>©Game Store 2023</p>
    </footer>
</body>
</html>
