<!DOCTYPE html>
<html>
<head>
    <title>Game Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/style.css">

</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><i class="fas fa-gamepad"></i> Game Store</a>
            <!-- Updated search bar form -->
            <form class="form-inline my-2 my-lg-0 search-box" method="get" asp-controller="Home" asp-action="Index">
                <input class="form-control" type="search" name="searchString" placeholder="Search games" aria-label="Search">
                <button class="btn search-btn" type="submit"><i class="fas fa-search"></i></button>
            </form>

        </div>
    </nav>
    <h1 class="game-store-title">Explore Our Collection</h1>
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card game-store-product-card">
                        <img class="card-img-top" src="@product.Image" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <footer class="footer">
        <p>©Game Store 2023</p>
    </footer>
</body>
</html>
