<!DOCTYPE html>
<html>
<head>
    <title>Game Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <style>
        /* Custom styles for Game Store */
        body {
            font-family: 'Roboto', sans-serif;
            background: #141618;
            color: #FFFFFF;
        }

        .game-store-header {
            background: #18191A;
            padding: 50px 0;
        }

        .game-store-title {
            font-size: 60px;
            font-weight: 600;
            color: #FCC10D;
        }

        .game-store-subtitle {
            font-size: 20px;
            color: #FFFFFF;
        }

        .container {
            padding: 30px;
        }

        .game-store-product-card {
            background: #202123;
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease;
            margin-bottom: 25px;
        }

            .game-store-product-card:hover {
                transform: scale(1.03);
                box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            }

            .game-store-product-card img {
                object-fit: cover;
                height: 300px;
                width: 100%;
            }

            .game-store-product-card .card-body {
                padding: 20px;
            }

            .game-store-product-card h5.card-title {
                font-size: 24px;
                margin-bottom: 10px;
                color: #FCC10D;
            }

            .game-store-product-card p.card-text {
                font-size: 16px;
                color: #BFBFBF;
            }

        .footer {
            background: #18191A;
            color: #FFFFFF;
            padding: 20px 0;
        }

            .footer p {
                font-size: 14px;
                color: #BFBFBF;
            }
    </style>
</head>
<body>
    <header class="text-center game-store-header">
        <h1 class="game-store-title">Game Store</h1>
        <p class="game-store-subtitle">Explore our range of gaming accessories</p>
    </header>
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card game-store-product-card">
                        <img class="card-img-top" src="@product.Image" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <footer class="footer">
        <p class="text-center">©Game Store 2023</p>
    </footer>
</body>
</html>